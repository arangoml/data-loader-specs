{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://arangodb.com/schemas/dataloader/loader_mapping.schema.json",
  "title": "Data Loader Mapping",
  "description": "Specification of a data mapping from external data formats and sources to ArangoDB",
  "type": "object",
  "properties": {
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "sourceName": {
            "type": "string",
            "description": "Name of data source for use in mappings"
          },
          "sourceURIS": {
            "type": "array",
            "description": "A list of source URIs to be read from (e.g. local file locations)",
            "items": { "type": "string" }
          },
          "sourceType": {
            "type": "string",
            "enum": [
              "csv",
              "parquet",
              "json",
              "jsonl"
            ]
          },
          "sourceTypeOptions": {
            "type": "object",
            "description": "Source Type Specific Properties (e.g. whether or not a CSV has a header, column names, etc.)"
          },
          "fieldSchema": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/fieldDefinition"
            }
          }
        },
        "required": [
          "sourceName",
          "sourceURIS",
          "sourceType",
          "fieldSchema"
        ]
      },
      "minItems": 1
    },
    "graphDefinition": {
      "type": "object",
      "properties": {
        "graph": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "vertexCollections": {
              "type": "array",
              "items": { "type": "string" }
            },
            "relations": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "fromVertexCollections": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "toVertexCollections": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                }
              }
            }
          }
        },
        "collections": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "createCollection": { "type": "boolean" },
              "createCollectionType": {
                "type": "string",
                "enum": ["document", "edge"]
              },
              "fieldSchema": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/fieldDefinition"
                }
              }
            },
            "required": ["name", "fieldSchema"]
          },
          "minItems": 1
        }
      },
      "required": ["collections"]
    },
    "mappingSchema": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "inputs": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "sourceName": {"type": "string"},
                "sourceFieldIdentifier": {"type": "string"}
              },
              "required": ["sourceName", "sourceFieldIdentifier"]
            },
            "minItems": 1
          },
          "outputs": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "collectionName": {"type": "string"},
                "targetFieldIdentifier": {"type": "string"}
              },
              "required": ["collectionName", "targetFieldIdentifier"]
            },
            "minItems": 1
          },
          "function": {"type": "string"},
          "isPrimary": {"type": "boolean"}
        },
        "required": ["inputs", "outputs", "function"]
      },
      "minItems": 1
    }
  },
  "required": [
    "sources",
    "graphDefinition",
    "mappingSchema"
  ],
  "definitions": {
    "fieldDefinition": {
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "fieldId": {"type": "string"},
        "type": {
          "type": "string",
          "enum": ["array", "object", "value"]
        },
        "struct": {
          "oneOf": [
            {
              "type": "string",
              "enum": ["boolean", "number", "string"]
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/fieldDefinition"
              }
            }
          ]
        }
      },
      "required": ["name", "type", "struct"]
    }
  }
}