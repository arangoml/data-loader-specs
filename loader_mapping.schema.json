{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://arangodb.com/schemas/dataloader/loader_mapping.schema.json",
  "title": "Data Loader Mapping",
  "description": "Specification of a data mapping from external data formats and sources to ArangoDB",
  "type": "object",
  "properties": {
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "sourceName": {
            "type": "string",
            "description": "Name of data source for use in mappings"
          },
          "sourceFile": {
            "type": "string"
          },
          "sourceType": {
            "type": "string",
            "enum": [
              "csv",
              "parquet",
              "json",
              "jsonl"
            ]
          }
        },
        "required": [
          "sourceName",
          "sourceFile",
          "sourceType"
        ]
      },
      "minItems": 1
    },
    "graphDefinition": {
      "type": "object",
      "properties": {
        "graph": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "vertexCollections": {
              "type": "array",
              "items": { "type": "string" }
            },
            "relations": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "fromVertexCollections": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "toVertexCollections": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                }
              }
            }
          }
        },
        "collections": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "createCollection": { "type": "boolean" },
              "createCollectionType": {
                "type": "string",
                "enum": ["document", "edge"]
              }
            },
            "required": ["name"]
          },
          "minItems": 1
        }
      },
      "required": ["collections"]
    },
    "mappings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "collectionName": {"type": "string"},
          "sourceName": {"type": "string"},
          "fields": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/fieldDefinition"
            }
          }
        }
      },
      "minItems": 1
    }
  },
  "required": [
    "sources",
    "graphDefinition",
    "mappings"
  ],
  "definitions": {
    "fieldDefinition": {
      "type": "object",
      "properties": {
        "sourceField": {"type": "string"},
        "collectionField": {"type": "string"},
        "fieldType": {
          "type": "string",
          "enum": ["array", "object", "value"]
        },
        "field": {
          "oneOf": [
            {
              "type": "string",
              "enum": ["boolean", "number", "string"]
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/fieldDefinition"
              }
            },
          ]
        },
        "isNullable": {"type": "boolean"}
      },
      "required": ["sourceField", "collectionField", "field"]
    }
  }
}